<simulation verbosity='low'>
   <output prefix='simulation'>
     <properties filename='out' stride='1' flush='50'>  [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_md,  potential ] </properties>
     <trajectory filename='pos' format='xyz' stride='1' flush='50'> positions </trajectory>
     <trajectory filename='for' format='xyz' stride='1' flush='50'> forces </trajectory>
     <trajectory filename='fsp' format='xyz' stride='1' flush='50'> forces_spring </trajectory>
     <trajectory filename='xc' format='xyz' stride='1' flush='50'> x_centroid </trajectory>
     <trajectory filename='fc' format='xyz' stride='1' flush='50'> f_centroid </trajectory>
     <checkpoint filename='restart' stride='2000' overwrite='true'/>
   </output>
   <total_steps> 800000 </total_steps>
   <total_time> 432000 </total_time>
   <prng><seed>42</seed></prng>
   <ffsocket name='driver' mode='unix' matching='any'>
       <address> h2o-MBPOL-liquid </address>
       <latency> 1e-3 </latency> 
   </ffsocket>
   <system>
      <initialize nbeads='32'>
         <file mode='xyz'> init.xyz </file>
         <velocities mode='thermal' units='kelvin'> 300 </velocities>
      </initialize>
      <forces>
         <force forcefield ='driver'> </force>
      </forces> 
      <motion mode='dynamics'>
         <dynamics mode='nvt'>
            <timestep units='femtosecond'> 0.25 </timestep>
            <thermostat mode='pile_g'>
                <tau units='femtosecond'> 100 </tau>
            </thermostat>
         </dynamics>
      </motion>
      <ensemble>
         <temperature units='kelvin'> 300 </temperature>
      </ensemble>
   </system>
</simulation>
