#!/bin/bash

#SBATCH --job-name=model            # Job name, will show up in squeue output
#SBATCH --partition=gpu                # main or test
#SBATCH --ntasks=1                     # Number of cores
#SBATCH --cpus-per-task=8
#SBATCH --nodes=1                      # Ensure that all cores are on one machine
#SBATCH --time=2-00:30:00              # Runtime in DAYS-HH:MM:SS format
#SBATCH --mem="20GB"              # Memory per cpu in MB (see also --mem)
#SBATCH --output=job.out           # File to which standard out will be written
#SBATCH --error=job.err            # File to which standard err will be written
#SBATCH --gres=gpu:1

source ~/.bashrc
conda activate picg

# variable $IPI_ROOT is initiated when i-pi/env.sh is sourced 
python $PATH2PIGS/scripts/pigs-run_sim.py ipi --conf sim.yaml    --PATH2RUNASE $PATH2PIGS/scripts/pigs-run-ase.py --PATH2PIGS $PATH2PIGS --PATH2IPI $IPI_ROOT --MBPOLEXEC $MBX_HOME/plugins/i-pi/bin/driver
