#!/bin/bash
#SBATCH --export=ALL
#SBATCH --job-name=model
#SBATCH --mem-per-cpu=4G
#SBATCH --time=2-00:15:00
#SBATCH --mail-type=FAIL
#SBATCH --nodes=1
#SBATCH --ntasks 1
#SBATCH --cpus-per-task 4
#SBATCH --output=job%j.out
#SBATCH --error=job%j.err
#SBATCH --partition=main
source ~/.bashrc
conda activate picg

rm /tmp/ipi_socket_address
rm /tmp/ipi_ff_socket_address

if [ -f "RESTART" ]; then
    i-pi RESTART > log.i-pi &
else
    i-pi input.xml > log.i-pi &
fi


sleep 10
echo start drivers
i-pi-driver -u -h ff_socket_address -m pswater &
pigs-run-ase.py --config run-ase.yaml &
wait
