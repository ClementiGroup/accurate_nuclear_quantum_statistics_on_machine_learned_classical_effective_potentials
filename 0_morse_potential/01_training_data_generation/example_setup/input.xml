<simulation verbosity='medium'>
  <output prefix='simulation'>
    <properties filename='out' stride='20' flush='1000'>  [ time{picosecond}, conserved, temperature{kelvin}, kinetic_md,  potential ] </properties>
    <trajectory filename='pos' format='xyz' stride='20' flush='1000'> positions </trajectory>
    <trajectory filename='for' format='xyz' stride='20' flush='1000'> forces </trajectory>
    <trajectory filename='fsp' format='xyz' stride='20' flush='1000'> forces_spring </trajectory> 
    <trajectory filename='xc' format='xyz' stride='20' flush='1000'> x_centroid </trajectory>
    <trajectory filename='fc' format='xyz' stride='20' flush='1000'> f_centroid </trajectory>
    <checkpoint filename='restart' stride='20000' overwrite='true'/>
  </output>
  <total_steps> 2050000 </total_steps>
  <total_time> 172000 </total_time>
  <prng>
    <seed>23658</seed>
  </prng>
  <ffsocket mode='unix' pbc='false' name='driver' matching='any'>
    <address> morse_PIMD_efficient_sampling_100 </address>
  </ffsocket>
  <system_template>
      <labels>   [ TEMP] </labels>
      <instance> [ 100] </instance>
      <template>
      <system prefix='TEMP'>
        <initialize nbeads='64'>
          <file mode='xyz' units='angstrom'> init.xyz </file>
          <masses mode='manual'> [1728.3071] </masses>
          <cell mode='abc' units='angstrom'> [ 100.0, 100.0, 100.0 ] </cell>
          <velocities mode='thermal' units='kelvin'> TEMP </velocities>
        </initialize>
        <forces>
          <force forcefield='driver'/>
        </forces>
        <ensemble>
          <temperature units='kelvin'>TEMP</temperature>
        </ensemble>
        <motion mode='dynamics'>
          <fixcom>False</fixcom>
          <dynamics mode='nvt'>
            <timestep units='femtosecond'> 0.5 </timestep>
            <thermostat mode='pile_l'>
              <tau units='femtosecond'> 100 </tau>
            </thermostat>
          </dynamics>
        </motion>
      </system>
      </template>
  </system_template>
</simulation>
